      </div>

      <div class="input-append">
      <%= form_tag courses_path, :method => 'get' do %>
          <%= text_field_tag :search_text, params[:search_text], :autocomplete => :off,
          :data => { provide: "typeahead", source: @unique_text_list, items: "9"},
