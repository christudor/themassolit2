<% provide(:title, 'Edit School') %>
<%= content_for :body_id, "form" %>

<div class="menubar">
  <div class="sidebar-toggler visible-xs">
    <i class="ion-navicon"></i>
  </div>
  <div class="page-title">
    Edit School
  </div>
</div>

<div class="content-wrapper">
  <%= form_for @school, html: { class: "form-horizontal" } do |f| %>
  <%= render 'shared/school_error_messages' %>
  
  <div class="form-group">
    <%= f.label :name, :class => 'col-sm-2 col-md-2 control-label' %>
      <div class="col-sm-10 col-md-8">
        <%= f.text_field :name, :class => 'form-control' %>
      </div>
  </div>

  <div class="form-group">
    <%= f.label :active, "Active?", :class => 'col-sm-2 col-md-2 control-label' %>
      <div class="col-sm-10 col-md-8">
        <%= f.select :active, [["True", true],["False", false]], { :selected => "True"}, { :class => 'form-control' } %>
      </div>
  </div>

  <div class="form-group form-actions">
      <div class="col-sm-offset-2 col-sm-10">
        <%= link_to "Cancel", :back, :class => "btn btn-default" %>
        <%= f.submit "Edit School", :class => "btn btn-success" %>
      </div>
  </div>

  <% end %>

</div>