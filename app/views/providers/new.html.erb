<% provide(:title, 'New Tutor') %>
<%= content_for :body_id, "form" %>

<div class="menubar">
<div class="sidebar-toggler visible-xs">
<i class="ion-navicon"></i>
</div>

  <div class="page-title">
    Add New Tutor
  </div>
</div>

<div class="content-wrapper">
  
  <%= form_for @provider, html: { class: "form-horizontal" } do |f| %>

  <div class="form-group">
    <%= f.label :name, :class => 'col-sm-2 col-md-2 control-label' %>
        <div class="col-sm-10 col-md-8">
          <%= f.text_field :name, :class => 'form-control' %>
      </div>
  </div>

  <div class="form-group">
    <%= f.label :position, :class => 'col-sm-2 col-md-2 control-label' %>
        <div class="col-sm-10 col-md-8">
          <%= f.text_field :position, :class => 'form-control' %>
      </div>
  </div>

  <div class="form-group">
    <%= f.label :department, :class => 'col-sm-2 col-md-2 control-label' %>
        <div class="col-sm-10 col-md-8">
          <%= f.text_field :department, :class => 'form-control' %>
      </div>
  </div>

  <div class="form-group">
    <%= f.label :college, :class => 'col-sm-2 col-md-2 control-label' %>
        <div class="col-sm-10 col-md-8">
          <%= f.text_field :college, :class => 'form-control' %>
      </div>
  </div>

  <div class="form-group">
    <%= f.label :university, :class => 'col-sm-2 col-md-2 control-label' %>
        <div class="col-sm-10 col-md-8">
          <%= f.text_field :university, :class => 'form-control' %>
      </div>
  </div>

    <div class="form-group">
    <%= f.label :bio, "Biography", :class => 'col-sm-2 col-md-2 control-label' %>
        <div class="col-sm-10 col-md-8">
          <%= f.text_area :bio, :rows => 10, :class => 'form-control' %>
      </div>
  </div>

  <div class="form-group">
    <%= f.label :website, :class => 'col-sm-2 col-md-2 control-label' %>
        <div class="col-sm-10 col-md-8">
          <%= f.text_field :website, :class => 'form-control' %>
      </div>
  </div>

  <div class="form-group">
    <%= f.label :email, :class => 'col-sm-2 col-md-2 control-label' %>
        <div class="col-sm-10 col-md-8">
          <%= f.text_field :email, :class => 'form-control' %>
      </div>
  </div>

  <div class="form-group form-actions">
        <div class="col-sm-offset-2 col-sm-10">
    <%= link_to "Cancel", :back, :class => "btn btn-default" %>

        <%= f.submit "Add new tutor", class: "btn btn-success" %>
      </div>
    </div>

    <% end %>

</div>
