<% provide(:title, @provider.name) %>
<%= content_for :body_id, "portfolio-item" %>

  <div class="st-container">
    <div class="st-pusher">
      <div class="st-content">
        <div id="showcase">
          <div class="container">
            <div class="row gallery_container">
              <div class="col-md-12">
                <div class="project">
                  
                  <h1>
                    <%= @provider.name %>
                  </h1>
                  <div class="col-md-7">                   
                    <h3>About</h3>
                    <p class="text">
                      <%= @provider.bio.html_safe %>
                    </p>
                    <br />
                    <p class="text"><%= link_to "Â« Go back", :back %></p>
                </div>

                  <div class="col-md-4 col-md-offset-1 description">
                    <div class="info">
                      <h3>Key Information</h3>
                      <br />
                      <p>
                        Position:
                        <%= @provider.position %>
                      </p>
                      <p>
                        Department:
                        <%= @provider.department %>
                      </p>
                      <p>
                        <%= @provider.university %>
                      </p>
                      <br><br>
                      <% unless @provider.courses.blank? %>
                        <h3>Courses</h3>
                          <br />
                          <% @provider.courses.each do |course| %>
                          <p class="text">
                          <%= link_to course.name, course %></li>
                          </p>
                          <% end %>
                      <% end %>
                    </div>              
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
