<%= content_for :body_id, "datatables" %>
<% provide(:title, 'Trailers Dashboard') %>

<div class="menubar">
    <div class="sidebar-toggler visible-xs">
        <i class="ion-navicon"></i>
    </div>
    
  <div class="page-title">
    Tutors Dashboard
  </div>
</div>

<div class="content-wrapper">
  
  <table id="orders-datatable">
        <thead>
            <tr>
                <th tabindex="0" rowspan="1" colspan="1">Name</th>
                <th tabindex="0" rowspan="1" colspan="1">Course</th>
                <th tabindex="0" rowspan="1" colspan="1">Provider</th>
                <th tabindex="0" rowspan="1" colspan="1">Date Added</th>
                <th tabindex="0" rowspan="1" colspan="1">Options</th>
            </tr>
        </thead>
        
        <tfoot>
            <tr>
                <th rowspan="1" colspan="1">Name</th>
                <th rowspan="1" colspan="1">Course</th>
                <th rowspan="1" colspan="1">Provider</th>
                <th rowspan="1" colspan="1">Date Added</th>
                <th rowspan="1" colspan="1">Options</th>
            </tr>
        </tfoot>
        <tbody>
            <% Trailer.all.each do |trailer| %>
            <tr>
              <td><%= link_to trailer.name, trailer %></td>
              <td><%= link_to trailer.course.name, trailer.course unless trailer.course.blank? %></td>
              <td><%= link_to trailer.course.provider.name, trailer.course.provider unless trailer.course.blank? %></td>
              <td><%= trailer.created_at.to_date.to_formatted_s(:rfc822) %></td>
              <td>
                  <%= link_to "Del", trailer_path(trailer), :data => { :confirm => "Delete trailer?" }, :method => :delete %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>