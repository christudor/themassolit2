<% provide(:title, 'New Trailer') %>
<%= content_for :body_id, "form" %>

<div class="menubar">
<div class="sidebar-toggler visible-xs">
<i class="ion-navicon"></i>
</div>

	<div class="page-title">
		Add New Trailer (Stage 1 of 2)
	</div>
</div>

<div class="content-wrapper">
	
	<%= direct_upload_form_for @traileruploader, html: { class: "form-horizontal" } do |f| %>

	<div class="form-group">
    <label class="col-sm-2 col-md-2 control-label">Trailer</label>
      	<div class="col-sm-10 col-md-8">
      		<%= f.file_field :trailer, :class => 'form-control' %>
  		</div>
	</div>

	<div class="form-group form-actions">
				<div class="col-sm-offset-2 col-sm-10">
		<%= link_to "Cancel", :back, :class => "btn btn-default" %>
    		<%= f.submit "Upload trailer", class: "btn btn-success" %>
    	</div>
    </div>

    <% end %>

</div>