<% provide(:title, "Contact Us") %>
<%= content_for :body_id, "contact-us" %>

<div id="map" style="height:400px;">
		
		<iframe src="https://www.google.com/maps/embed?pb=!1m10!1m8!1m3!1d2482.1937979732415!2d-0.07062334999999999!3d51.52800519999941!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sen!2s!4v1404849004610" width="100%" height="400" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>

		<div class="marker-wrapper">
			<div class="marker-icon"></div>
			<div class="marker"></div>
		</div>

		<div id="directions">
			<p>Get directions to our office</p>
			<form>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Write your zip code" />
				</div>
				<button type="submit" class="button button-small">
					<span>Get directions</span>
				</button>
			</form>
		</div>
	</div>

	<div id="info">
		<div class="container">
			<div class="row">
				<div class="col-md-8 message">
					<h3>Send us a message</h3>
					<p>
						You can contact us with anything related to MASSOLIT. <br/> We'll get in touch with you as soon as possible.
					</p>
					<%= form_for @message, :url => contact_path, :id => "contact-form" do |form| %>
					    <div class="form-group">
					      <%= form.label :name %>
					      <%= form.text_field :name, :class => "form-control" %>
					    </div>
					    
					    <div class="form-group">
					      <%= form.label :email %>
					      <%= form.text_field :email, :class => "form-control" %>
					    </div>
					    <div class="form-group">
					      <%= form.label :subject %>
					      <%= form.text_field :subject, :class => "form-control" %>
					    </div>
					    
					    <div class="form-group">
					      <%= form.label :body %>
					      <%= form.text_area :body, :rows => "6", :class => "form-control" %>
					    </div>

					    <div class="submit">
				  			<%= form.submit "Send", :class => "button button-small" %>
				  		</div>
				  	<% end %>
				</div>
				<div class="col-md-4 contact">
					<div class="address">
						<h3>Our Address</h3>
						<p>
							Flat 9 Pakenham House, <br />
							Wellington Row, <br />
							London, E2 7BA
						</p>
					</div>
					<div class="phone">
						<h3>By Phone</h3>
						<p>
							07747 468 202
						</p>
					</div>
					<div class="online-support">
						<strong>Looking for online support?</strong>
						<p>
							Talk to us now with our online chat
						</p>
					</div>
					<div class="social">
						<a href="http://www.facebook.com/massolit" class="fb"><img src="assets/social/fb.png" alt="facebook" /></a>
						<a href="http://www.twitter.com/themassolit" class="tw"><img src="assets/social/tw.png" alt="twitter" /></a>
					</div>
				</div>
			</div>
		</div>
	</div>