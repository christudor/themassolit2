<% provide(:title, 'Edit Account Details') %>
<%= content_for :body_id, "signup" %>

  <div class="container">
    <div class="row header">
      <div class="col-md-12">
        <h4>Change Password</h4>
      </div>
    </div>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'form-vertical' }) do |f| %>

  <%= f.error_notification %>
  <%= display_base_errors resource %>

    <div class="row">
      <div class="col-md-12">
        <div class="wrapper clearfix">
          <div class="formy">
            <div class="row">
              <div class="col-md-12">

			  <div class="form-group">
              <%= f.input :password, :label => "New Password:", :autocomplete => "off", :required => true, input_html: { class: 'form-control' } %>
              </div>

              <div class="form-group">
              <% if f.object.encrypted_password.present? %>
                <%= f.input :current_password, :label => "Current Password:", :required => true, input_html: { class: 'form-control' } %>
              <% end %>
              </div>

              <div class="submit">
              <%= f.button :submit, "Submit", input_html: { class: 'button-clear' } %>
              </div>
                  
                  <% end %>
              </div>
            </div>            
          </div>
        </div>
      </div>
    </div>
  </div>

<% if current_user.rolable_type == "Member" %>
	<%= render 'member_edit_fields' %>
<% elsif current_user.rolable_type == "OldMember" %>
  <%= render 'old_member_edit_fields' %>
<% else %>
<% end %>