<div class="container">
<div class="span6 offset3">
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'form-vertical' }) do |f| %>
  <%= f.error_notification %>

  <%= display_base_errors resource %>

  <h2>Account Information</h2>
  
  <%= f.input :name, :disabled => true, :label => "Name:" %>
  <%= f.input :email, :label => "E-Mail Address:", :disabled => true, :hint => "Because we use your e-mail to validate your account, editing of e-mail address has been disabled. Sorry!" %>
  <br><br>

  <h2>Personal Information</h2>
  <%= f.input :sex, :as => :radio, :collection => ["Male", "Female", "I'd rather not say"],
  	 :item_wrapper_class => 'inline', :label => "Gender:", :checked => "Male" %>

  <%= f.input :date_of_birth, as: :date, start_year: Date.today.year - 65,
                              end_year: Date.today.year, discard_day: false,
                              order: [:day, :month, :year],
                              :label => "Date of Birth:" %>
  <center><%= f.button :submit, 'Update', :class => "btn btn-large btn-primary" %></center>

  <br><br>

  <h2>Change Password</h2>


  <%= f.input :password, :label => "New Password:", :autocomplete => "off", :hint => "Leave blank if you do not want to make changes", :required => false %>
  <%= f.input :password_confirmation, :label => "New Password Confirmation:", :required => false %>
  
  <% if f.object.encrypted_password.present? %>
  <%= f.input :current_password, :label => "Current Password:", :hint => "Enter current password to confirm changes", :required => true %>
  <% end %>
  <center><%= f.button :submit, 'Update', :class => "btn btn-large btn-primary" %></center>
<% end %> 
</div>
</div>