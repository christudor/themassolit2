<div class="modal fade" id="role-options-<%= user.id %>" tabindex="-1" role="dialog">
      <div class="modal-dialog">
        <div class="modal-content">
          <%= simple_form_for user, :url => user_path(user), :html => {:method => :put } do |f| %>
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">
                  Change role for <strong><%= user.name %></strong> (Current role: 
                    <%= Role.find_by_id(user.role_ids.first).name.titleize %>)
                </h4>
              </div>
              <div class="modal-body">
                <div class="form-group">
                  <%= f.input :role_ids, :collection => Role.all, :as => :radio_buttons, :label_method => lambda {|t| t.name.titleize}, :label => false, :item_wrapper_class => 'inline', checked: user.role_ids.first %>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <%= f.submit "Change Role", :class => "btn btn-success" %>
              </div>
        <% end %>
        </div>
      </div>
  </div>